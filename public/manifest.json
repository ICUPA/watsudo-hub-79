  "shortcuts": [
    {
      "name": "Nearby Drivers",
      "short_name": "Drivers",
      "description": "Find nearby drivers for immediate pickup",
      "url": "/mobility/nearby-drivers",
      "icons": [
        {
          "src": "/icons/shortcut-drivers-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Generate QR",
      "short_name": "QR",
      "description": "Generate USSD QR codes for payments",
      "url": "/qr/generate",
      "icons": [
        {
          "src": "/icons/shortcut-qr-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Schedule Trip",
      "short_name": "Schedule",
      "description": "Schedule a trip for later",
      "url": "/mobility/schedule-trip",
      "icons": [
        {
          "src": "/icons/shortcut-schedule-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/plain", "application/pdf"]
        }
      ]
    }
  },
  "capture_links": "existing-client-navigate",
  "prefer_related_applications": false,
  "related_applications": [],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+whatsapp",
      "url": "/whatsapp?phone=%s"
    },
    {
      "protocol": "tel",
      "url": "/call?phone=%s"
    }
  ]
}
