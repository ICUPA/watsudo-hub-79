# Mobility + USSD QR Hub Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Service role key for admin operations (keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Public keys for client-side operations
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# =============================================================================
# WHATSAPP BUSINESS API (META)
# =============================================================================
# WhatsApp Business Account ID
META_WABA_ID=your-waba-id

# Phone number ID for sending messages
META_PHONE_NUMBER_ID=your-phone-number-id

# Access token for API calls
META_ACCESS_TOKEN=your-access-token

# Webhook verification token
META_VERIFY_TOKEN=your-verify-token

# App secret for signature validation
META_APP_SECRET=your-app-secret

# =============================================================================
# OPENAI API
# =============================================================================
# OpenAI API key for GPT-4o Vision OCR
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# GOOGLE MAPS
# =============================================================================
# Google Maps JavaScript API key
GOOGLE_MAPS_BROWSER_KEY=your-google-maps-key

# =============================================================================
# APP CONFIGURATION
# =============================================================================
# Application environment
NODE_ENV=development

# Timezone for the application
TIMEZONE=Africa/Kigali

# =============================================================================
# LEGACY SUPPORT (fallback variables)
# =============================================================================
# These are supported for backward compatibility but deprecated
# Use META_* variables above instead

# Legacy WhatsApp variables (deprecated)
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=your-verify-token
WHATSAPP_APP_SECRET=your-app-secret

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=your-sentry-dsn

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Only set these in development environment
# DEBUG=true
# MOCK_EXTERNAL_SERVICES=false
